<p id="notice"><%= notice %></p>

<div class="연락처목록">
<h1>연락처 목록</h1>
</div>
<hr>
<br>


<table>
  <thead>
    <tr>
      <th>이름</th>
      <th>전화번호</th>
      <th>메모</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
 
  <tbody>
    <% @contacts.each do |contact| %>
    
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone_number %></td>
        <td><%= contact.memo %></td>
        
        <td><%= link_to '보기', contact %></td>
        <td><%= link_to '수정', edit_contact_path(contact) %></td>
        <td><%= link_to '삭제', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr>

<%= link_to '등록하기', new_contact_path %>
